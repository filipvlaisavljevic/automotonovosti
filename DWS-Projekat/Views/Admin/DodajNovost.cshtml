@{
    ViewData["Title"] = "EditPage";
}

<form asp-controller="Admin" asp-action="SacuvajNovost" method="post">
    <div class="form-group">
        <label>Unesite naslov objave: </label>
        <input name="title" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Unesite URL slike za objavu (preporučujemo imgur): </label>
        <input name="slika" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Unesite tekst objave: </label>
        <div class="form-group">
            <textarea id="summernote" name="content" class="form-control" rows="50"></textarea>
        </div>
    </div>


    <button type="submit" class="btn btn-primary w-100 mt-3">Objavi</button>

</form>

@section Scripts{
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {            
            $('#summernote').summernote({
                height: 350
            });
        });
    </script>
}

