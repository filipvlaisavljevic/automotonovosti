@model Objava
@{
}

<form asp-controller="Admin" asp-action="ObrisiObjavu" method="post">
    <input value="@Model.Id" name="id" type="hidden" />
    <button class="btn btn-danger w-100 mb-3">Obriši post</button>
</form>

<form asp-controller="Admin" asp-action="SacuvajObjavu" method="post">
    <input name="id" type="hidden" value="@Model.Id" />
    <div class="form-group">
        <label>Naslov objave: </label>
        <input name="title" type="text" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label>Autor objave: </label>
        <input name="autor" type="text" class="form-control" value="@Model.Autor" />
    </div>
    <div class="form-group">
        <label>Slika objave: </label>
        <input name="slika" type="text" class="form-control" value="@Model.Slika" />
    </div>
    <div class="form-group">
        <label>Sadržaj objave: </label>
        <textarea id="summernote" name="content" class="form-control" rows="20">@Model.Content</textarea>
    </div>
    <button type="submit" class="btn btn-primary w-100 mt-3">Potvrdi uređivanje</button>
</form>

@section Scripts{
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
    </script>
}
